@model ContractorSwap.Models.JobListingModel

@{
    ViewData["Title"] = "Details";
}

<h1>Job Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <p>Posted Date</p>
        </dt>
        <dd class = "col-sm-10">
            @{var d = Model.Date.ToShortDateString();}
            <p>@d</p>
        </dd>
        <dt class="col-sm-2">
            <p>Job Date</p>
        </dt>
        <dd class="col-sm-10">
            @{var da = Model.CompletionDate.ToShortDateString();}
            <p>@da</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <a>Poster</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contractor.Name)
        </dd>
    </dl>
</div>
<div> 
    <a asp-controller="Application" asp-action="Create" asp-route-jobListingId="@Model?.Id">Apply</a>
    <a asp-action="Index">Back to Jobs</a>
</div>
