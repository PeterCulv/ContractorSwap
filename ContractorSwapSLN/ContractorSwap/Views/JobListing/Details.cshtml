@model ContractorSwap.Models.JobListingModel

@{
    ViewData["Title"] = "Details";
}
<div class="row justify-content-center">
    <div class="col-md-4 text-center mt-4 mb-4 detailsTitle">
        <h1 class="detailsTitleText">Job Details</h1>
    </div>
</div>
<div class="row justify-content-center">
    <div class="card w-50 m-4 cardDisplayStyle">
        <dl class="row m-4">
            <dt class="col-lg-4 ps-5">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
            <dt class="col-lg-4 ps-5">
            <p>Posted Date</p>
        </dt>
            <dd class="col-lg-8">
            @{var d = Model.Date.ToShortDateString();}
            <p>@d</p>
        </dd>
            <dt class="col-lg-4 ps-5">
            <p>Job Date</p>
        </dt>
            <dd class="col-lg-8">
            @{var da = Model.CompletionDate.ToShortDateString();}
            <p>@da</p>
        </dd>
            <dt class="col-lg-4 ps-5">
            @Html.DisplayNameFor(model => model.City)
        </dt>
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.City)
        </dd>
            <dt class="col-lg-4 ps-5">
            @Html.DisplayNameFor(model => model.State)
        </dt>
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.State)
        </dd>
            <dt class="col-lg-4 ps-5">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Description)
        </dd>
            <dt class="col-lg-4 ps-5">
            <a>Poster</a>
        </dt>
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Contractor.Name)
        </dd>
    </dl>
        <div class="row m-2 justify-content-between">
            <div class="col-lg-6 p-2 text-center">
                <a asp-controller="Application" asp-action="Create" asp-route-jobListingId="@Model?.Id" class="btn btn-display">Apply</a>
            </div>
            <div class="col-lg-6 p-2 text-center">
                <a asp-action="Index" class="btn btn-display">Back to Jobs</a>
            </div>
    </div>
</div>
</div>
