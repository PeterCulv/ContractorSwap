        </dl>
        <div class="row m-2 justify-content-center">
            <div class="col-lg-4 p-2 text-center">
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-display">View Applications</a>
            </div>
        </div>
        <div class="row m-2 justify-content-between">
            <div class="col-lg-4 p-2 text-center">        
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-display">Edit</a>
            </div>
            <div class="col-lg-4 p-2 text-center">
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-display">Delete</a>
            </div>
            <div class="col-lg-4 p-2 text-center">
                <a asp-action="MyIndex" class="btn btn-display">Back to My Jobs</a>
            </div>
