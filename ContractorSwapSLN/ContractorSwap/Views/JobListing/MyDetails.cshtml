@model ContractorSwap.Models.JobListingModel

@{
    ViewData["Title"] = "MyDetails";
}

<div class="row justify-content-center">
    <div class="col-md-4 text-center mt-4 mb-4 detailsTitle">
        <h1 class="detailsTitleText">Job Details</h1>
    </div>
</div>

<div class ="row justify-content-center">    
    <div class="card w-50 m-4 cardDisplayStyle">
    <dl class="row m-4">
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-lg-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            Posted Date
        </dt>
       
            <dd class="col-lg-8">
            @{
                var p = Model.Date.ToShortDateString();
            }
            @p
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            Job Date
        </dt>
            
            <dd class="col-lg-8">
            @{
                var d = Model.CompletionDate.ToShortDateString();
            }
            @d
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
           
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Address)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.City)
        </dt>
            
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.City)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.State)
        </dt>
           
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.State)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
            
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Zip)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
            
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Description)
        </dd>
            <dt class="col-lg-4 ps-lg-5">
            @Html.DisplayNameFor(model => model.Contractor)
        </dt>
            
            <dd class="col-lg-8">
            @Html.DisplayFor(model => model.Contractor.Name)
        </dd>
