@model ContractorSwap.Models.JobListingModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Your Job</h1>


<div class="p-4 rounded">
    <div class="container-lg">
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="border border-5 rounded-3  p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Job Date</label>
                <input asp-for="CompletionDate" class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Work Type</label>

                <div class="form-check">
                    <input type="checkbox" asp-for="Plumbing" class="form-check-input" />
                    <label class="form-check-label">Pumbling</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="Carpentery" class="form-check-input" />
                    <label class="form-check-label">Carpentry</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="General" class="form-check-input" />
                    <label class="form-check-label">General</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="Electrical" class="form-check-input" />
                    <label class="form-check-label">Electrical</label>
                </div>

                @*<span asp-validation-for="Specialties" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>   
            
            <div class="form-group">               
                <input type="hidden" asp-for="ContractorId" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="job-btn">
                <a href="/JobListing/MyIndex" class="btn btn-hover-effect">Back to My Jobs</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    <style>
        .job-btn {
            display: flex;
            justify-content: center;
        }

        .border {
            color: #FFFBE0;
            opacity: 95%;
            background-color: #40312C;
        }

        h1 {
            display: flex;
            justify-content:center;
            color: #FFFBE0;
        }

        .btn {
            color: #FFF7EF;
            background-color: #8C4303;
            border: 1px solid aliceblue;
        }

        .btn-hover-effect {
            background-color: #8C4303;
            border: 1px solid aliceblue;
            transition: transform 1s;
        }

            .btn-hover-effect:hover {
                background-color: #8C4303;
                border: 1px solid aliceblue;
                transform: scale(1.1);
            }
    </style>
