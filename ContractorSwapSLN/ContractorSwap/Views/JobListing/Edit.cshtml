@model ContractorSwap.Models.JobListingModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>JobListingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Job Date</label>
                <input asp-for="CompletionDate" class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Work Type</label>

                <div class="form-check">
                    <input type="checkbox" asp-for="Plumbing" class="form-check-input" />
                    <label class="form-check-label">Pumbling</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="Carpentery" class="form-check-input" />
                    <label class="form-check-label">Carpentry</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="General" class="form-check-input" />
                    <label class="form-check-label">General</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="Electrical" class="form-check-input" />
                    <label class="form-check-label">Electrical</label>
                </div>

                @*<span asp-validation-for="Specialties" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>   
            
            <div class="form-group">               
                <input type="hidden" asp-for="ContractorId" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyIndex">Back to My Jobs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
