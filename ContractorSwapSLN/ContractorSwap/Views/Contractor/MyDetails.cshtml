@model ContractorSwap.Models.ContractorModel

@{
    ViewData["Title"] = "My Profile";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center mt-4 mb-4 detailsTitle">
            <h1 class="detailsTitleText">Profile</h1>
        </div>
    </div>
    <div class="row justify-content-center">    
        <div class="card w-50 m-4" id="MyDetailsCard">
            <dl class="row p-4" style="font-size: 24px">
                <dt class = "col-lg-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-lg-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-lg-4">
                    @Html.DisplayNameFor(model => model.Specialties)
                </dt>
                <dd class = "col-lg-8">
                    @foreach(string specialty in Model.Specialties){
                        @specialty
                        <br />

                        @*@Html.DisplayFor(model => model.Specialties)*@
}
                </dd>
                <dt class = "col-lg-4">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class = "col-lg-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.State)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.Zip)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.Zip)
                </dd>
                <dt class = "col-lg-4">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class = "col-lg-8">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class = "col-lg-4">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class = "col-lg-8">
                    @Html.DisplayFor(model => model.Password)
                </dd>
            </dl>
            <div class="row m-2 justify-content-between">
                <div class="col-lg-6 p-2 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-display">Edit</a>
                </div>
                <div class="col-lg-6 p-2 text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-display">Back to Home</a>
                </div>
            </div>
    </div>
    </div>
</div>

