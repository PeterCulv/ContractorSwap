@model IEnumerable<ContractorSwap.Models.ApplicationModel>

@{
    ViewData["Title"] = "MyIndex";
}

<h1>Current Applications</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bid)
            </th>
            <th>
                Accepted
            </th>
            <th>
                Job Name
            </th>
            <th>
                Job Poster
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                $@Html.DisplayFor(modelItem => item.Bid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.Contractor.Name)
            </td>
            <td>
                    @{
                        var condensedDate = item.Date.ToShortDateString();
                    }
                @condensedDate
            </td>
            <td>
                <a asp-controller="JobListing" asp-action="Details" asp-route-id="@item.JobListingId"> Job Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Cancel Application</a>
            </td>
        </tr>
}
    </tbody>
</table>
