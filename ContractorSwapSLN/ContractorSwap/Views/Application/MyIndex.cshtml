@model IEnumerable<ContractorSwap.Models.ApplicationModel>

@{
    ViewData["Title"] = "MyIndex";
}
<div class="row justify-content-center">
    <div class="col-md-8 text-center mt-4 mb-4 detailsTitle">
        <h1 class="detailsTitleText">Current Applications</h1>
    </div>
</div>
<div class="row justify-content-center">
    <div class="card w-100 m-4 cardDisplayStyle">
<table class="table applicationTable overflow-scroll">
    <thead>
        <tr class="applicationTableHeaderText">
            <th>
                @Html.DisplayNameFor(model => model.Bid)
            </th>
            <th>
                Accepted
            </th>
            <th>
                Job Name
            </th>
            <th>
                Job Poster
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tableBodyText">
@foreach (var item in Model) {
        <tr>
            <td>
                $@Html.DisplayFor(modelItem => item.Bid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.Contractor.Name)
            </td>
            <td>
                    @{
                        var condensedDate = item.Date.ToShortDateString();
                    }
                @condensedDate
            </td>
            <td>
                <a asp-controller="JobListing" asp-action="Details" asp-route-id="@item.JobListingId" class="btn btn-display">Job Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-cancel">Cancel Application</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>