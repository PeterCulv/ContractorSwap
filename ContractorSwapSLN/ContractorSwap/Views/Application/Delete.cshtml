@model ContractorSwap.Models.ApplicationModel

@{
    ViewData["Title"] = "Delete";
}

<div class="bg-light p-4 rounded">


<h3>Are you sure you want to delete this application?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.accepted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accepted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contractor)
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
           <div class="home-btn">
                <a href="/Application/MyIndex" class="btn btn-primary btn-hover-effect">Back to My Applications</a>
           </div>
    </form>
</div>
</div>
<style>
    .home-btn {
        display:flex;
        justify-content: center;
        
    }
    .btn{
        color: #FFF7EF;
        background-color: #8C4303;
        border: 1px solid aliceblue;
    }
    

    .btn-hover-effect {
        background-color: #8C4303;
        border: 1px solid aliceblue;
        transition: transform 1s;
    }

        .btn-hover-effect:hover {
            background-color: #8C4303;
            border: 1px solid aliceblue;
            transform: scale(1.2);
        }
</style>