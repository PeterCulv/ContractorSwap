@model ContractorSwap.Models.ApplicationModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Your Application Here!</h1>



<div class="create-page">
    <div class="app-form-container">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bid" class="control-label"></label>
                <input asp-for="Bid" class="form-control" />
                <span asp-validation-for="Bid" class="text-danger"></span>
            </div>      
            <div class="form-group">               
                <input type="hidden" asp-for="JobListingId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ContractorId" value="0" class="form-control" />
            </div>
                    <div class="form-group-btn">
                        <input type="submit" value="Create" class="btn btn-primary btn-hover-effect" />
                    </div>
                    <div class="home-btn">
                        <a href="/Home/Index" class="btn btn-hover-effect">Back to List</a>
                    </div>
        </form>
    </div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

